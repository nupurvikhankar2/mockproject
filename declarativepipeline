pipeline {
    agent any
    stages {
        stage('Clean') {
            steps {
                    bat 'mvn clean'
                }
            }
        stage('Test') {
            steps {
                    bat 'mvn test'
                }
            }
        stage('Package') {
            steps {
                    bat 'mvn package'
                }
            }
        stage('Consolidate Result'){
            steps{
                input('Do you want to capture result')
                junit '**/target/surefire-reports/Test-*.xml'
                archive 'target/*.jar'
                }
            }
        }
    }
